{
  "extends": "./tsconfig.base.json",
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      },
      "jsx": "react-native"  // Ensure this is set if you use JSX in other files
    },
    "exclude": ["node_modules", "dist"]

}
